@model IEnumerable<Biblioteca.Livros.Web.ViewModels.Livro.LivroIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeColecao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeLivro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeColecao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeLivro)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdLivro }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdLivro }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdLivro })
        </td>
    </tr>
}

</table>
